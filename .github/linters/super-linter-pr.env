# =============================================================================
# LANGUAGE VALIDATION FLAGS (COMMONLY USED)
# =============================================================================

# Bash/Shell
VALIDATE_BASH=true
VALIDATE_BASH_EXEC=true

# Docker
VALIDATE_DOCKERFILE_HADOLINT=true

# EditorConfig
VALIDATE_EDITORCONFIG=true

# Environment files
VALIDATE_ENV=true

# GitHub Actions
VALIDATE_GITHUB_ACTIONS=true

# Go
VALIDATE_GO=true

# HTML
VALIDATE_HTML=true

# JavaScript/TypeScript
VALIDATE_JAVASCRIPT_ES=false
