# Shell formatting
VALIDATE_SHELL_SHFMT=true

# YAML
VALIDATE_YAML=true

# XML
VALIDATE_XML=true

# =============================================================================
# VALIDATION EXCLUSIONS
# =============================================================================

# Exclude generated files and vendor directories
FILTER_REGEX_EXCLUDE=.*(vendor|node_modules|\.git|\.vscode|\.pb\.go|_pb2\.py|\.generated\.|\.min\.|\.map|coverage|\.tmp|dist|build).*

