printWidth: 80
tabWidth: 2
useTabs: false
semi: true
singleQuote: true
quoteProps: as-needed
jsxSingleQuote: true
trailingComma: es5
bracketSpacing: true
bracketSameLine: false
arrowParens: avoid
rangeStart: 0
requirePragma: false
insertPragma: false
proseWrap: preserve
htmlWhitespaceSensitivity: css
vueIndentScriptAndStyle: false
endOfLine: lf
embeddedLanguageFormatting: auto
singleAttributePerLine: false

overrides:
  - files: '*.md'
    options:
      printWidth: 100
      proseWrap: always
  - files: '*.json'
    options:
      printWidth: 100
  - files: '*.yml'
    options:
      printWidth: 100
      singleQuote: false
  - files: '*.yaml'
    options:
      printWidth: 100
      singleQuote: false
